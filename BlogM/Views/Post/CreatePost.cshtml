@model BlogM.Model.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "/Views/Shared/_layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreatePost</title>
</head>
<body>
    <br />
    <h4>Post</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreatePost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <select name="Category">
                        <option value="pets">Pets</option>
                        <option value="sports">Sports</option>
                    </select>
                    <form>
                        <div class="form-group">
                            <select name="Tags">
                                <option value="fluffy">Fluffy</option>
                                <option value="fun">Fun</option>
                                <option value="super">Super</option>
                                <option value="nice">Nice</option>
                            </select>
                            Author:<br>
                            <input type="text" name="author"><br>
                            <span asp-validation-for="Author" class="text-danger"></span>
                    </form>
                </div>
                        <label asp-for="Body" class="control-label"></label>
                        <br />
                        <textarea asp-for="Body" class="form-control">
                    </textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <input asp-for="CategoryId" type="hidden" value="@ViewBag.CategoryId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div class="return">
        <a asp-controller="Post" asp-action="PostIndex">Back to all posts</a>
    </div>

</body>
</html>
